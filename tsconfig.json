{
  "compilerOptions": {
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@categories": ["categories/index"],
      "@ticket/*": ["modules/ticket/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@database/*": ["database/*"],
      "@assets/*": ["../assets/*"],
      "@struct/*": ["struct/*"],
      "@config/*": ["config/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
